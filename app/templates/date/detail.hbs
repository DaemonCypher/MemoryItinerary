<div class="card shadow-lg p-4 mb-5" style="border-radius: 10px;">
  <h2 class="text-center mb-4" style="color: #f0e8e8; font-weight: bold;">
    Date: {{this.model.date}}
  </h2>

  <div class="activity-card justify-content-center align-items-center">
    <ul class="list-group">
      {{#each this.model.activities as |activity|}}
      <li class="list-group-item d-flex align-items-center justify-content-between w-100"
        style="display: grid; grid-template-columns: 1fr 80px 120px; gap: 10px; align-items: center;">
        <div>
          <strong style="color: #333;">{{activity.data.time}}</strong>
          <br>
          <span class="text-muted d-block text-truncate" style="max-width: 300px;">{{activity.data.location}}</span>
        </div>
        <span class="badge bg-secondary text-center" style="width: 80px;">${{activity.data.budget}}</span>
        <div class="d-flex gap-2 justify-content-end">
          <LinkTo @route="editactivity" @models={{array this.model.trip_id this.model.date_id activity.id}}
            class="btn btn-outline-secondary btn-sm text-center" style="width: 70px;">
            Edit
          </LinkTo>
          <button class="btn btn-outline-danger btn-sm text-center" type="button" style="width: 70px;" {{on "click" (fn
            this.deleteActivity activity.id)}}>
            Delete
          </button>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  
  <div class="mt-4 text-center">
    <LinkTo @route="addactivity" @models={{array this.model.trip_id this.model.date_id}}>
      <button class="btn w-100 py-2"
        style="max-width: 300px; background-color: #F1DCA7; color: #000; font-size: 1.1rem; font-weight: bold; transition: background-color 0.3s, transform 0.2s;"
        type="button">
        Add Activity +
      </button>
    </LinkTo>
  </div>
</div>
<div class="d-flex justify-content-end mt-4">
  <LinkTo @route="date" @model={{this.model.trip_id}}>
    <button class="btn btn-success rounded-circle d-flex justify-content-center align-items-center"
      style="width: 50px; height: 50px; font-size: 1.5rem; transition: transform 0.2s ease, background-color 0.3s ease;"
      type="button">
      <i class="bi bi-check"></i>
    </button>
  </LinkTo>
</div>
{{outlet}}