{{page-title "DatePicker"}}

<div class="d-flex flex-column flex-md-row align-items-center mb-4">
  <div class="flex-grow-1 text-center text-md-start mb-3 mb-md-0">
    <h1 class="fs-1 text-dark title mb-3" >
      When do you want to go?
    </h1>
  </div>
</div>

<div class="date-display-container d-flex flex-column align-items-center py-3 mb-4 bg-light rounded shadow-sm">
  <div class="d-flex align-items-center mb-2">
    <i class="bi bi-calendar-event-fill text-primary fs-4 me-2"></i>
    <p id="startDateDisplay" class="mb-0 fs-5 fw-bold">
      Start Date: <span class="text-muted fw-normal">Not selected</span>
    </p>
  </div>
  <div class="d-flex align-items-center">
    <i class="bi bi-calendar-check-fill text-success fs-4 me-2"></i>
    <p id="endDateDisplay" class="mb-0 fs-5 fw-bold">
      End Date: <span class="text-muted fw-normal">Not selected</span>
    </p>
  </div>
</div>

<div class="calendar-wrapper d-flex align-items-start bg-white shadow-sm rounded p-4 mb-4">
  <div class="litepicker-container d-flex justify-content-center align-items-center w-100">
    <Litepicker
      class="custom-litepicker"
      @singleMode={{false}}
      @startDate={{this.today}}
      @plugins={{array 'keyboardnav' 'mobilefriendly'}}
      @numberOfMonths={{if this.isMobile 1 3}}
      @numberOfColumns={{if this.isMobile 1 3}}
      @inlineMode={{true}}
      @registerAPI={{this.registerAPI}}
      @onSelected={{this.onDateChanged}}
      autocomplete="off"
    />
  </div>
</div>
<div class="level">
  <div class="level-item">
    <LinkTo class=w-100 @route="destination" @model={{this.model}}>
      <button
        class="btn w-100 py-2"
        type="button"
        style="background-color: #235725; color: #000; font-size: 1.25rem; font-weight: bold; transition: transform 0.2s, background-color 0.3s;"
        >
        <i class="bi bi-arrow-left"></i> Back
      </button>
    </LinkTo>
  </div>
  <div class="level-item">
    <button
      class="btn w-100 py-2"
      type="button"
      style="background-color: #F1DCA7; color: #000; font-size: 1.25rem; font-weight: bold; transition: transform 0.2s, background-color 0.3s;"
      {{on "click" this.validateAndNavigate}}>
      Next <i class="bi bi-arrow-right"></i>
    </button>
  </div>
</div>
